{
  "compilerOptions": {
    "target": "ES2022",
  "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist/main",
    "rootDir": "src/main",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "electron"]
  },
  "include": ["src/main/**/*"],
  "exclude": ["node_modules"]
}
